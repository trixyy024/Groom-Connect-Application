<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".customer.AddToCart"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/mintgreen"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="?attr/actionBarTheme">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/addToCartBckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="back_button"
            android:backgroundTint="@color/black"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/cart_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="create message button"
            android:src="@drawable/cart" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dogcatdashboard"
            android:contentDescription="@string/product_image" />

        <!-- Product Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Tag -->


            <!-- Product Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madre de Cacao Shampoo"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Description"
            android:textColor="@color/black" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/cart"
                android:paddingVertical="12dp"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                app:cornerRadius="6dp" />

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:paddingVertical="12dp"
                app:cornerRadius="6dp"/>
        </LinearLayout>
    </LinearLayout>
