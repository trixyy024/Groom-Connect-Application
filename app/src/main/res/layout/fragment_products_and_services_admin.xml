<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.ProductsAndServices">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:backgroundTint="@color/mintgreen">

        <!-- Centered Title -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Products and Services"
            android:textSize="20sp"
            android:textStyle="bold"

            android:textColor="@android:color/black"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/mintgreen"
            android:padding="16dp">

            <!-- Search and Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="Search"
                    android:padding="8dp"
                    android:textColor="@color/white"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- Services Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:id="@+id/serviceTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:padding="8dp"
                android:elevation="4dp"
                android:layout_marginBottom="8dp">

                <!-- Table Header -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </TableRow>

                <!-- Sample Rows -->
                <TableRow>
                    <TextView
                        android:id="@+id/serviceCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="001"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:id="@+id/serviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service A"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/serviceCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$100"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/servicePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$100"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                </TableRow>

            </TableLayout>

            <!-- Add and Edit Buttons for Services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Spacer to push buttons to the right -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/sAddBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/green"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/sEditBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"/>
            </LinearLayout>

            <!-- Products Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/products"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- Table Header -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/code"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </TableRow>

                <!-- Sample Rows -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p001"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_a"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$50"
                        android:padding="8dp"
                        android:textColor="@color/black"/>
                </TableRow>

            </TableLayout>

            <!-- Add and Edit Buttons for Products -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Spacer to push buttons to the right -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/pAddBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/green"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/pEditBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
